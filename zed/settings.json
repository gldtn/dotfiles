// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "theme": {
    "mode": "dark",
    "light": "Cyberdream light",
    "dark": "Cyberdream dark"
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    },
    "background.appearance": "blurred",
    "background": "#16181a85",
    "editor.background": "#00000040",
    "editor.gutter.background": "#00000038",
    "tab_bar.background": "#00000040",
    "terminal.background": "#00000040",
    "terminal.ansi.dim_black": "#FFFFFF",
    "editor.active_line_number": "#FFFFFF",
    "toolbar.background": "#00000046",
    "tab.active_background": "#28282830",
    "tab.inactive_background": "#00000000",
    "status_bar.background": "##00000030",
    "title_bar.background": "#00000099",
    "panel.background": "#00000046",
    "border.variant": "#0000000",
    "scrollbar.track.border": "#00000000",
    "editor.active_line.background": "#7b849695"
  },

  "ui_font_size": 16,

  "buffer_font_family": "MonoLisa Variable",
  "buffer_font_size": 16,
  "buffer_line_height": { "custom": 1.8 },
  "buffer_font_features": {
    "calt": true,
    "ss02": true
  },

  "vim_mode": false,

  "git": {
    "git_gutter": "tracked_files"
  },

  "tab_bar": {
    "show": true
  },

  "project_panel": {
    "dock": "right"
  },

  "languages": {
    "Shell Script": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "lua": {
      "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
      "runtime.version": "Lua 5.4",
      "diagnostics.severity": {
        //      "duplicate-set-field": "Hint"
      },
      "format.defaultConfig": {
        "indent_style": "space",
        "indent_size": "4"
      }
    }
  }
}
