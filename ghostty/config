# keybindings
keybind = clear

# Splits
keybind = ctrl+g>h=goto_split:left
keybind = ctrl+g>j=goto_split:bottom
keybind = ctrl+g>k=goto_split:top
keybind = ctrl+g>l=goto_split:right
keybind = ctrl+shift+x=new_split:auto
keybind = ctrl+shift+m=toggle_split_zoom

# Clipboard & Font
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = ctrl+shift+zero=reset_font_size
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1

# New windows
keybind = super+n=new_window
keybind = super+k=clear_screen
keybind = super+enter=new_window
keybind = super+shift+enter=new_window

# Close windows
keybind = super+w=close_surface
keybind = super+q>q=close_window
keybind = super+q>a=close_all_windows

# Services
keybind = ctrl+shift+r=reload_config
keybind = ctrl+shift+s>o=open_config
keybind = ctrl+shift+s>i=inspector:toggle
keybind = ctrl+shift+s>d=write_screen_file:open
